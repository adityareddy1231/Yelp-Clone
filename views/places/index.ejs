<% include ../partials/header %>
  <div class="container">
    <header class="jumbotron">
      <div class="container">
        <h1>Welcome to Zorro's Yelp!</h1>
        <p>View our hand picked dog friendly places from all around the world!</p>
        <p><a class="btn btn-primary btn-large" href="/places/new">Add a dog friendly place!</a></p>
      </div>
    </header>

    <div class="row text-center">
      <div class="col-lg-12">
        <h3>Our Most Popular Dog Friendly Places!</h3>
      </div>

      <% places.forEach(function(dogFriendlyPlace){ %>
        <div class="col-md-3 col-sm-6" style="display: flex; flex-wrap: wrap;">
          <div class="thumbnail">
            <img src="<%= dogFriendlyPlace.image %>" alt="Dog Friendly Place Image">
            <div class="caption">
              <h4> <strong><%= dogFriendlyPlace.name %> </strong></h4>
            </div>
            <p>
              <a href="/places/<%= dogFriendlyPlace._id %>" class="btn btn-primary">More Info</a>
            </p>
          </div>
        </div>
        <%  }) %>
    </div>
  </div>
  <% include ../partials/footer %>
