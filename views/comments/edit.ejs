<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center;"> Edit Your Review</h1>
    <div style="width: 45%; margin: 25px auto; text-align: center;">
      <form action="/places/<%= place_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Comment..." value="<%= comment.text %>" name="comment[text]">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/places/<%= place_id %>">Go Back</a><br><br>
    </div>
  </div>
  <br><br>
</div>
<% include ../partials/footer %>
